{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": ".",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": true,
		"esModuleInterop": true,
		"strictPropertyInitialization": false,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
